---
import Star from "./icons/Star.astro";
import ExternalLink from "./icons/ExternalLink.astro";
---

<section
  id="certificaciones"
  class="py-24 bg-gradient-to-br from-secondary-50 via-white to-primary-50 dark:from-neutral-900 dark:via-secondary-900/10 dark:to-neutral-800"
>
  <div class="container mx-auto px-6 lg:px-8">
    <h2
      class="text-3xl md:text-4xl font-display font-bold text-center bg-gradient-to-r from-secondary-600 via-primary-600 to-secondary-800 dark:from-secondary-400 dark:via-primary-400 dark:to-secondary-300 bg-clip-text mb-16"

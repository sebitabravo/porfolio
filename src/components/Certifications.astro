            </div>
          </div>
        </div>
      </div>

      <!-- Certificaciones adicionales (ocultas inicialmente) -->
      <div id="hidden-certifications" class="space-y-8 hidden">
        <!-- Desarrollo de Aplicaciones Básicas -->
        <div
          class="group relative bg-gradient-to-br from-white to-primary-50/50 dark:from-neutral-800 dark:to-primary-900/20 rounded-2xl p-8 border border-neutral-200 dark:border-neutral-700 hover:border-primary-300 dark:hover:border-primary-600 hover:shadow-2xl hover:shadow-primary-500/10 transition-all duration-500 transform hover:-translate-y-2"

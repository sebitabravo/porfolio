---
import ExternalLink from "./icons/ExternalLink.astro";

export interface Props {
  href: string;
  title: string;
  description: string;
  gradient: string;
  target?: "_blank" | "_self";
}

const { href, title, description, gradient, target = "_blank" } = Astro.props;
---

<a href={href} target={target} class="group block">
  <div class={`bg-gradient-to-r ${gradient} rounded-xl p-4 transition-all duration-300 hover:scale-105 hover:shadow-xl`}>
    <div class="flex items-center gap-4">
      <div class="p-3 bg-white/20 rounded-lg backdrop-blur-sm border border-white/10">
        <slot name="icon" />
      </div>
      <div class="flex-1">
        <h4 class="text-white font-semibold text-lg drop-shadow-sm">{title}</h4>
        <p class="text-white/90 text-sm opacity-95 font-medium">{description}</p>
      </div>
      <ExternalLink class="w-5 h-5 text-white/90 group-hover:text-white transition-colors drop-shadow-sm" />
    </div>
  </div>
</a>

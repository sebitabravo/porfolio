---
import ExternalLink from "./icons/ExternalLink.astro";

export interface Props {
  href: string;
  title: string;
  description: string;
  gradient: string;
  target?: "_blank" | "_self";
  featured?: boolean;
}

const { href, title, description, gradient, target = "_blank", featured = false } = Astro.props;
---

<a href={href} target={target} class="group block w-full">
  <div class={`bg-gradient-to-r ${gradient} rounded-xl transition-all duration-300 hover:scale-105 hover:shadow-xl border border-white/10 backdrop-blur-sm ${featured ? 'p-6 shadow-2xl ring-2 ring-white/20' : 'p-4'}`}>
    <div class="flex items-center gap-4">
      <div class={`bg-white/20 rounded-lg backdrop-blur-sm border border-white/10 flex-shrink-0 ${featured ? 'p-4' : 'p-3'}`}>
        <slot name="icon" />
      </div>
      <div class="flex-1 min-w-0">
        <h4 class={`text-white font-semibold drop-shadow-sm ${featured ? 'text-xl' : 'text-lg'}`}>{title}</h4>
        <p class={`text-white/90 opacity-95 font-medium ${featured ? 'text-base' : 'text-sm'}`}>{description}</p>
      </div>
      <ExternalLink class="w-5 h-5 text-white/90 group-hover:text-white transition-colors drop-shadow-sm flex-shrink-0" />
    </div>
  </div>
</a>

---
// Results display component for URL shortening
---

<!-- Resultado -->
<div id="result" class="mt-6 hidden">
  <div
    class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4"
  >
    <h3 class="text-lg font-medium text-green-800 dark:text-green-200 mb-2">
      Â¡Link creado exitosamente!
    </h3>
    <div
      class="flex items-center justify-between bg-white dark:bg-gray-700 rounded border p-3"
    >
      <span id="shortUrl" class="text-blue-600 dark:text-blue-400 font-mono"
      ></span>
      <button
        id="copyBtn"
        class="bg-blue-100 hover:bg-blue-200 dark:bg-blue-900 dark:hover:bg-blue-800 text-blue-800 dark:text-blue-200 px-3 py-1 rounded text-sm transition-colors duration-200"
      >
        Copiar
      </button>
    </div>
  </div>
</div>

<!-- Loading -->
<div id="loading" class="mt-6 hidden">
  <div class="text-center">
    <div
      class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600"
    >
    </div>
    <span class="ml-2 text-gray-600 dark:text-gray-300">Creando link...</span>
  </div>
</div>

<!-- Error -->
<div id="error" class="mt-6 hidden">
  <div
    class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4"
  >
    <h3 class="text-lg font-medium text-red-800 dark:text-red-200 mb-2">
      Error
    </h3>
    <p id="errorMessage" class="text-red-700 dark:text-red-300"></p>
  </div>
</div>

---
// Results display component for URL shortening
---

<!-- Resultado -->
<div id="result" class="hidden">
  <div class="relative group">
    <div
      class="absolute -inset-1 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-2xl blur-xl"
    >
    </div>

    <div
      class="relative bg-emerald-500/10 backdrop-blur-sm border border-emerald-400/30 rounded-2xl p-6 shadow-2xl"
    >
      <h3
        class="text-xl font-bold text-emerald-300 mb-4 flex items-center space-x-2"
      >
        <span class="text-2xl">✅</span>
        <span>¡Link creado exitosamente!</span>
      </h3>
      <div
        class="flex items-center justify-between bg-white/10 backdrop-blur-sm rounded-xl border border-white/20 p-4 hover:bg-white/15 transition-colors duration-300"
      >
        <span
          id="shortUrl"
          class="text-accent-300 font-mono text-lg font-semibold flex-1 mr-4"
        ></span>
        <button
          id="copyBtn"
          class="bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white px-6 py-2 rounded-xl text-sm font-medium transition-colors duration-300 hover:shadow-lg"
        >
          Copiar
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Loading -->
<div id="loading" class="hidden">
  <div class="text-center py-8">
    <div class="relative inline-flex items-center space-x-3">
      <div
        class="inline-block rounded-full h-8 w-8 border-4 border-secondary-500/30 border-t-secondary-400"
      >
      </div>
      <span class="text-white/80 dark:text-neutral-300 text-lg font-medium"
        >Creando link...</span
      >
    </div>
  </div>
</div>

<!-- Error -->
<div id="error" class="hidden">
  <div class="relative group">
    <div
      class="absolute -inset-1 bg-gradient-to-r from-red-500 to-rose-500 rounded-2xl blur-xl"
    >
    </div>

    <div
      class="relative bg-red-500/10 backdrop-blur-sm border border-red-400/30 rounded-2xl p-6 shadow-2xl"
    >
      <h3
        class="text-xl font-bold text-red-300 mb-4 flex items-center space-x-2"
      >
        <span class="text-2xl">❌</span>
        <span>Error</span>
      </h3>
      <p id="errorMessage" class="text-red-200 leading-relaxed"></p>
    </div>
  </div>
</div>

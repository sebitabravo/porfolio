---
import RedesLinkCard from "./RedesLinkCard.astro";
import Book from "./icons/Book.astro";
import Bookmark from "./icons/Bookmark.astro";
import Computer from "./icons/Computer.astro";
import Check from "./icons/Check.astro";
import Coffee from "./icons/Coffee.astro";
---

<div class="space-y-4">
  <RedesLinkCard
    href="/python-desde-cero"
    title="Python desde cero"
    description="Aquí puedes descargar mi libro en formato PDF"
    gradient="from-emerald-600 via-teal-600 to-cyan-600"
  >
    <Book slot="icon" />
  </RedesLinkCard>

  <RedesLinkCard
    href="/recursos-recomendados"
    title="Recursos recomendados"
    description="Mi listado de recursos sobre programación y tecnología"
    gradient="from-violet-600 via-purple-600 to-fuchsia-600"
  >
    <Bookmark slot="icon" />
  </RedesLinkCard>

  <RedesLinkCard
    href="/mi-setup"
    title="Mi setup"
    description="Listado con todos los elementos que uso en mi trabajo"
    gradient="from-slate-600 via-gray-600 to-zinc-600"
  >
    <Computer slot="icon" />
  </RedesLinkCard>

  <RedesLinkCard
    href="/"
    target="_self"
    title="Sebastian Bravo"
    description="Mi sitio web"
    gradient="from-blue-600 via-indigo-600 to-purple-600"
  >
    <Check slot="icon" />
  </RedesLinkCard>

  <RedesLinkCard
    href="/cafe"
    title="Invítame a un café"
    description="¿Quieres ayudarme a que siga creando contenido?"
    gradient="from-amber-600 via-yellow-600 to-orange-600"
  >
    <Coffee slot="icon" />
  </RedesLinkCard>
</div>

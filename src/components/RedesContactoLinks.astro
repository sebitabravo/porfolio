---
import Mail from "./icons/Mail.astro";
import ExternalLink from "./icons/ExternalLink.astro";
import Calendar from "./icons/Calendar.astro";
---

<a href="mailto:sebitabravocontacto@gmail.com" class="group block mb-3">
  <div class="bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl p-4 transition-all duration-300 hover:scale-105 hover:shadow-lg">
    <div class="flex items-center gap-4">
      <div class="p-3 bg-white/20 rounded-lg">
        <Mail class="w-6 h-6 text-white" />
      </div>
      <div class="flex-1">
        <h4 class="text-white font-semibold text-lg">Email</h4>
        <p class="text-blue-100 text-sm opacity-90">sebitabravocontacto@gmail.com</p>
      </div>
      <ExternalLink class="w-5 h-5 text-white/80 group-hover:text-white transition-colors" />
    </div>
  </div>
</a>

<a href="https://cal.com/sebastianbravo" target="_blank" class="group block">
  <div class="bg-gradient-to-r from-green-500 to-green-600 rounded-xl p-4 transition-all duration-300 hover:scale-105 hover:shadow-lg">
    <div class="flex items-center gap-4">
      <div class="p-3 bg-white/20 rounded-lg">
        <Calendar class="w-6 h-6 text-white" />
      </div>
      <div class="flex-1">
        <h4 class="text-white font-semibold text-lg">Agenda una llamada</h4>
        <p class="text-green-100 text-sm opacity-90">30 minutos gratuitos para conversar</p>
      </div>
      <ExternalLink class="w-5 h-5 text-white/80 group-hover:text-white transition-colors" />
    </div>
  </div>
</a>

---
import RedesLinkCard from "./RedesLinkCard.astro";
import Discord from "./icons/Discord.astro";
import YouTube from "./icons/YouTube.astro";
import Instagram from "./icons/Instagram.astro";
---

<div class="space-y-4">
  <RedesLinkCard
    href="https://discord.gg/sebitabravo"
    title="Discord"
    description="El chat y los grupos de estudio de la comunidad"
    gradient="from-indigo-600 via-blue-600 to-cyan-600"
  >
    <Discord slot="icon" />
  </RedesLinkCard>

  <RedesLinkCard
    href="/youtube"
    title="YouTube"
    description="Cursos y tutoriales sobre desarrollo de software"
    gradient="from-red-600 via-red-500 to-orange-500"
  >
    <YouTube slot="icon" />
  </RedesLinkCard>

  <RedesLinkCard
    href="/youtube-secundario"
    title="YouTube | canal secundario"
    description="Emisiones en directo destacadas"
    gradient="from-rose-500 via-pink-500 to-red-500"
  >
    <YouTube slot="icon" />
  </RedesLinkCard>

  <RedesLinkCard
    href="/instagram"
    title="Instagram"
    description="Contenido visual y actualizaciones del día a día"
    gradient="from-pink-600 via-fuchsia-600 to-purple-600"
  >
    <Instagram slot="icon" />
  </RedesLinkCard>
</div>
